@import '../_color'

.__i__content
    .__i__settings
        padding 10px
        height 100%
        width 100%
        absolute top left
        visibility hidden
        opacity 0
        outline 1px solid _white
        transition 400ms
        overflow-y auto
        z-index 100
        background _white

        &.show
            opacity 1
            visibility visible

        & > .__i__align

            & > a
                border 1px solid _black
                display block
                height 20px
                width 20px
                margin 3px
                float left

                &:before
                    content ''
                    display block
                    background _black


            & > a.__i__top
                margin-left 31px

                &:before
                    width 100%
                    height 50%

            & > a.__i__left
                clear both

                &:before
                    width 50%
                    height 100%

            & > a.__i__full
                &:before
                    width 100%
                    height 100%

            & > a.__i__right

                &:before
                    width 50%
                    height 100%
                    float right

            & > a.__i__bottom
                clear both
                margin-left 31px

                &:before
                    width 100%
                    height 50%
                    relative top 50% left


